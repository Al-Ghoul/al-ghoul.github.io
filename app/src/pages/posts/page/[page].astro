---
import BaseArabicLayout from "@layouts/BaseArabicLayout.astro";
import SpaceBoyScene from "@components/ui/core/scenes/SpaceBoyScene";
import Timeline from "@components/ui/timeline";
import { getCollection, type CollectionEntry } from "astro:content";
import { cn } from "@lib/utils";
import type { Page, GetStaticPaths } from "astro";

export async function getStaticPaths({ paginate }: Parameters<GetStaticPaths>[0]) {
  const posts = await getCollection("posts");

  const sortedPosts = posts
    .filter((p) => !p.data.draft)
    .filter((p) => p.data.lang === "ar")
    .sort(
      (a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
    );

  const postsPerPage = 10;

  return paginate(sortedPosts, {
    pageSize: postsPerPage,
  });
}

const page: Page<CollectionEntry<"posts">> = Astro.props.page;
const currentPagePosts = page.data;
const totalPages = page.lastPage;
const pageNumber = page.currentPage;
---
<BaseArabicLayout subTitle="أحدث المقالات">
  <meta property="og:title" content="أحدث المقالات | مدونة عبد الرحمن الغول" />
  <meta name="twitter:title" content="أحدث المقالات | مدونة عبد الرحمن الغول" />
  <meta name="application-name" content="مدونة عبد الرحمن الغول" />

  <meta name="author" content="عبد الرحمن الغول" />
  <meta name="publisher" content="عبد الرحمن الغول" />
  <meta name="creator" content="عبد الرحمن الغول" />

  <meta property="og:site_name" content="مدونة عبد الرحمن الغول" />

  <meta name="description" content={`أحدث المقالات في المدونة - الصفحة ${page.currentPage}`} />
  <meta property="og:description"  content={`أحدث المقالات في المدونة - الصفحة ${page.currentPage}`} />
  <meta name="twitter:description" content={`أحدث المقالات في المدونة - الصفحة ${page.currentPage}`} />

  <link rel="canonical" href={`https://al-ghoul.github.io/posts/page/${pageNumber}`} />
  <meta property="og:url" content={`https://al-ghoul.github.io/posts/page/${pageNumber}`} />

  <link rel="alternate" hreflang="ar" href={`https://al-ghoul.github.io/posts/page/${pageNumber}`} />
  <link rel="alternate" hreflang="en" href={`https://al-ghoul.github.io/en/posts/page/${pageNumber}`} />
  <link rel="alternate" hreflang="x-default" href={`https://al-ghoul.github.io/posts/page/${pageNumber}`} />

  {pageNumber > 1 && <link rel="prev" href={`https://al-ghoul.github.io/posts/page/${pageNumber - 1}`} />}
  {pageNumber < totalPages && <link rel="next" href={`https://al-ghoul.github.io/posts/page/${pageNumber + 1}`} />}

  <meta property="og:locale" content="ar_AR" />
  <meta property="og:locale:alternate" content="en_US" />

  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary" />

  <meta property="og:image" content="https://al-ghoul.github.io/ar-og-image.png" />
  <meta property="og:image:width" content="1850" />
  <meta property="og:image:height" content="461" />
  <meta property="og:image:type" content="image/png" />

  <meta name="twitter:image" content="https://al-ghoul.github.io/ar-og-image.png" />
  
  <meta property="og:image:alt" content="صورة عرض مسبق لمدونة عبد الرحمن الغول" />
  <meta name="twitter:image:alt" content="صورة عرض مسبق لمدونة عبد الرحمن الغول" />

  <div class="fixed inset-0 -z-10">
    <SpaceBoyScene client:only />
  </div>
  
  <main class="min-h-screen" slot="body">
    <section class="container mx-auto px-4 py-20">
      <h1 class="text-2xl md:text-4xl font-bold mb-8 capitalize" dir="rtl">
        أحدث المقالات
      </h1>

      <Timeline data={currentPagePosts} client:only />

      <nav
        class="flex justify-center items-center gap-2 mt-12"
        aria-label="Pagination"
      >
        {pageNumber > 1 && (
        <a
          href={`/posts/page/${pageNumber - 1}`}
          class="px-3 py-1 rounded-md border bg-white dark:bg-black hover:bg-muted"
        >
          السابق
        </a>
        )}

        <div class="flex gap-2">
          {Array.from({ length: totalPages }, (_, i) => {
          const num = i + 1;
          const isActive = num === pageNumber;

          return (
          <a
            href={isActive ? undefined : `/posts/page/${num}`}
            class={cn(
              "px-3 py-1 rounded-md border",
              isActive
                ? "bg-yellow-800 text-white dark:text-black cursor-not-allowed"
                : "bg-white dark:bg-black hover:bg-muted"
            )}
            aria-current={isActive ? "page" : undefined}
          >
            {num}
          </a>
          );
          })}
        </div>

        {pageNumber < totalPages && (
        <a
          href={`/posts/page/${pageNumber + 1}`}
          class="px-3 py-1 rounded-md border bg-white dark:bg-black hover:bg-muted"
        >
          التالي
        </a>
        )}
      </nav>
    </section>
  </main>
</BaseArabicLayout>
